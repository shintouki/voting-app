doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    title Create New Poll
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    link(href='/public/css/style.css', rel='stylesheet', type='text/css')
  body 
    if (user) 
      include nav-bar-logged-in.pug
    else
      include nav-bar-logged-out.pug
    .container.panel.panel-default
      .panel-body
        h2 Create a new poll here.
        form(action = '/addpoll' method='post')
          div
            label(for='title') Title:
            input#title(type='text', name='pollTitle')
          div
            label(for='options') Options (Separate with lines):
            textarea#options(name='pollOptions')
          .button
            button#create-poll-btn(type='submit') Create Poll
    include jquery.pug
    include bootstrap-js.pug
    script.
      var user= !{JSON.stringify(user)}
    script(type='text/javascript', src='/common/ajax-functions.js')
    script(type='text/javascript', src='/controllers/userController.client.js')
    script(type='text/javascript', src='/common/fixNavbarActive.js')
    //- Load from server if cdn failed
    include bootstrap-css.pug
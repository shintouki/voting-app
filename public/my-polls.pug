doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Your Polls
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(href='/public/css/style.css', rel='stylesheet', type='text/css')
  body 
    if (user) 
      include nav-bar-logged-in.pug
    else
      include nav-bar-logged-out.pug
    .container.panel.panel-default
      .panel-body
        h4.text-center These are the polls you have created.
        h4.text-center Select a poll to see poll details and vote.
        a(href='/newpoll')
          h4.text-center Or click on this text to create your own poll.
        #user-polls.list-group
    include jquery.pug
    include bootstrap-js.pug
    script(type='text/javascript', src='/common/ajax-functions.js')
    script(type='text/javascript', src='/controllers/userController.client.js')
    script(type='text/javascript', src='/controllers/showUserPollsController.client.js')
    script(type='text/javascript', src='/common/fixNavbarActive.js')
    //- Load from server if cdn failed
    include bootstrap-css.pug
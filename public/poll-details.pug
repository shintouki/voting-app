doctype html
html(lang="en")
  head
    title Poll Details
  body 
    if (user) 
      include navigation-bar.pug
    else
      .login 
        a(href='/auth/twitter', onclick="window.open('/auth/twitter', 'twitterWindow', 'width=500, height=650'); return false;")
          #login-btn.btn
            p Log in with Twitter
    p Poll Details
    h1#poll-title
    #optionsData
    form(action='', method='post')
      label I would like to vote for:
      select#poll-options(name='choices')
      input(type='submit')
    script(type='text/javascript', src='/common/ajax-functions.js')
    if (user)
      script(type='text/javascript', src='/controllers/user-controller.client.js')
    script(type='text/javascript', src='/controllers/poll-options-controller.client.js')